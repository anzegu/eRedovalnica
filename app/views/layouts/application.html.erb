<!DOCTYPE html>
<html>
  <head>
    <title>Redovalnica</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    
    <nav class="navbar navbar-default">
  		<div class="container">
  			<div class="navbar-header">
  				<%= link_to "eRedovalnica", root_path, class: "navbar-brand"  %>
  			</div>
  
    			<ul class="nav navbar-nav navbar-right">
    				<% if user_signed_in? %>
    				  <% if current_user.status == 2 %>
    				    <li><%= link_to "Add Subject", new_subject_path %></li>
    				  <% end %>
    				  <% if current_user.status == 2 %>
    					  <li><%= link_to "Edit", edit_user_registration_path %></li>
      					<li><%= link_to "Create User", new_user_registration_path %></li>
    					<% end %>
    					<li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
    				<% else %>
    					<li><%= link_to "Log In", new_user_session_path %></li>
    				<% end %>
    			</ul>
  		</div>
  	 </nav>
  
  
    	<p class="notice"><%= notice %></p>
    	<p class="alert"><%= alert %></p>
      
      <div class="container">
  		<%= yield %>
  	</div>

  </body>
</html>
