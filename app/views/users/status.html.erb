<div class="col-md-8">
    <h1>Users</h1>
    <table width="400px">
    <% @users.each do |user| %>
      <tr><div class="challange_button" style="width: 400px;">
            <td>
              <div id="email" style="float: left;">    
                <%= user.email %>
              </div>
            </td> 
            <td>
            <div style="float: left;">
                <% if user.status == 2 %>
                    <div id=<%= user.id %>>Admin</div> 
                <% elsif user.status == 0 %>
                    <div id=<%= user.id %>>Student | <%= link_to 'Teacher', {:controller => :users, :action => 'change', :id => user.id, :vid => 1}, remote: true %> | <%= link_to 'Admin', {:controller => :users, :action => 'change', :id => user.id, :vid => 2}, remote: true %></div>   
                <% elsif user.status == 1 %>
                    <div id=<%= user.id %>>Teacher | <%= link_to 'Student', {:controller => :users, :action => 'change', :id => user.id, :vid => 0}, remote: true %> | <%= link_to 'Admin', {:controller => :users, :action => 'change', :id => user.id, :vid => 2}, remote: true %></div> 
                <% end %>
            </div>
            </td>
            <% if current_user.status == 2 %>
                <td><%= link_to "Delete", user_path(user.id), method: :delete, data: { confirm: 'Are You Sure?'} %></td>
                <td></td>
                <td></td>
                <td></td>
            <% end %>
        </div></tr>
    <% end %>
</div>